<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="dashboard-banner">Welcome, <%= current_user.full_name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-3">
      <div class="panel">
        <h4>Friends Leaderboard</h4>
        <% @user_data.friends.each do |friend| %>
          <% if friend.active? %>
            <%= render partial: "friend", locals: { friend: friend } %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-12 col-md-3">
      <div class="panel">
        <h4>Recent Sleep Patterns</h4>
        <% @user_data.sleep.each do |day| %>
          <% if day.logged? %>
            <%= render partial: "sleep", locals: { sleep: day } %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-12 col-md-6">
      <div class="panel">
        <h4>Resting Heart Rate</h4>
        <%= image_tag Gchart.line(size: "500x300",
                                  bg: "fff",
                                  data: @user_data.all_heartrates,
                                  axis_with_labels: 'y',
                                  min_value: @user_data.minimum_heartrate - 2) %>
      </div>
    </div>
  </div>
</div>
